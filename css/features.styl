.features
    width 100vw
    min-height 700px
    background-color light_grey
    font-family: 'Lato', sans-serif;
    padding-top 30px
    .info
        width 100vw
        max-width 2000px
        height auto
        text-align center
        margin 0 auto
        overflow hidden
        padding-bottom 100px
        h2
            color blackish
            font-size 40px
            text-align center
            margin-bottom 100px
        .column
            max-height 300px
            float left
            width 33.33%
            text-align center
            padding-left 10px
            padding-right 20px
            img
                width 70px
                height 70px
            h3
                color blackish
                font-size 22px
            p
                color grey_blue
                font-family: 'NTR', sans-serif;
                font-size 20px
                min-height 200px
                max-width 400px
                margin 0 auto
