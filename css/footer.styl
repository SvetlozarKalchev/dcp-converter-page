// main: _main.styl

.footer
    width 100%
    height 320px
    background-color light_black
    position relative
    overflow hidden
    padding 10px
    font-family: 'NTR', sans-serif;
    .impressum
        width 100%
        height 90%
        overflow hidden
        font-family: 'Open Sans', sans-serif;
        font-size 0.9em
        display inline-block
        .email
            text-decoration underline
        .phone
            text-decoration underline
        .disclaimer
            font-style italic
            width 50%
        .copyright
            display inline-block
            position absolute
            bottom 5px
            left 10px


    .social-icons
        display inline-block
        position absolute
        bottom 5px
        right 10px
        img
            transition all .2s ease-in-out
            margin-right 20px
            width 40px
            height 40px
        img:hover
            transform scale(1.2)

@media(max-width: 700px)
    .footer
        hr
            display none
        .disclaimer
            font-style italic
            width 80% !important
        .copyright
            font-size 10px
            width 50%
