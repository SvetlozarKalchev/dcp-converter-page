// main: _main.styl

.purchase
    position relative
    width 100vw
    background-color blue
    font-family: 'Lato', sans-serif;
    color white
    padding-top 30px
    overflow hidden
    .screenshot
        min-width 150px
        min-height 200px
        max-width 500px
        max-height 400px
        width 80%
        float left
        margin-left 120px
        img
            width 100%
            height 100%
    .content
        width 100%
        min-height 600px
        font-size 25px
        h2
            text-align center
            font-size 40px
            margin-bottom 100px
        .buy
            height 300px
            width 400px
            overflow hidden
            margin 0 auto
            margin-bottom 25px
            img
                display block
                margin 0 auto

@media (max-width: 1080px)
    .container .purchase
        .screenshot
            display block
            float none
            margin 0 auto
    .content
        h2
            margin-bottom 80px !important
